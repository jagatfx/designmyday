<% layout( 'login-layout' ) -%>
<%- partial('login-nav') %>

<section>
<div class="container">
  <h2>Add activity</h2>
  <form role="form" action="/api/activity>" method="post" accept-charset="utf-8">
    <div class="form-group">
      <label for="metaActivity">metaActivity:</label>
      <input type="text" class="form-control" id="metaActivity" placeholder="Enter metaActivity" name="metaActivity" value="" />
    </div>
    <div class="form-group">
      <label for="activityVerb">activityVerb:</label>
      <input type="text" class="form-control" id="activityVerb" placeholder="Enter activityVerb" name="activityVerb" value="" />
    </div>
    <div class="form-group">
      <label for="activity">activity:</label>
      <input type="text" class="form-control" id="activity" placeholder="Enter activity" name="activity" value="" />
    </div>
    <div class="form-group">
      <label for="specificLocation">specificLocation:</label>
      <input type="text" class="form-control" id="specificLocation" placeholder="Enter specificLocation" name="specificLocation" value="" />
    </div>
    <div class="form-group">
      <label for="needPass">needPass:</label>
      <select class="form-control" id="needPass" name="needPass" value="false" />
        <option>true</option>
        <option selected="selected">false</option>
      </select>
    </div>
    <div class="form-group">
      <label for="city">city:</label>
      <input type="text" class="form-control" id="city" placeholder="Enter city" name="city" value="" />
    </div>
    <div class="form-group">
      <label for="region">region:</label>
      <input type="text" class="form-control" id="region" placeholder="Enter region" name="region" value="" />
    </div>
    <div class="form-group">
      <label for="country">country:</label>
      <input type="text" class="form-control" id="country" placeholder="Enter country" name="country" value="" />
    </div>
    <div class="form-group">
      <label for="description">description:</label>
      <textarea class="form-control" rows="5" id="description" name="description"></textarea>
    </div>
    <div class="form-group">
      <label for="link">link:</label>
      <input type="text" class="form-control" id="link" placeholder="Enter link" name="link" value="" />
    </div>
    <div class="form-group">
      <label for="img">img:</label>
      <input type="text" class="form-control" id="img" placeholder="Enter img" name="img" value="" />
    </div>
    <div class="form-group">
      <label for="targetIntensity">targetIntensity:</label>
      <input type="text" class="form-control" id="targetIntensity" placeholder="Enter targetIntensity" name="targetIntensity" value="" />
    </div>
    <div class="form-group">
      <label for="targetFeelings">targetFeelings:</label>
      <input type="text" class="form-control" id="targetFeelings" placeholder="Enter targetFeelings" name="targetFeelings" value="" />
    </div>
    <div class="form-group">
      <label for="restrictions">restrictions:</label>
      <input type="text" class="form-control" id="restrictions" placeholder="Enter restrictions" name="restrictions" value="" />
    </div>

    <div id="add-activity">
      <button type="submit" class="btn btn-default">Submit</button>
      <a href="/vote">Cancel</a>
    </div>
  </form>
</div>
</section>
